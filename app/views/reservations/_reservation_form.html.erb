<%= form_for @reservation, :html => { :"data-validate" => 'parsley', :class => 'form-horizontal', :multipart => true } do |f| %>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'email_field', :"data-required" => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :datetime, :class => 'datetime' %>
    <div class="controls">
      <%= f.datetime_field :datetime, :class => 'datetime_field', :"data-required" => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :message, :class => 'text_field' %>
    <div class="controls">
      <%= f.text_area :message, :class => 'text_area', :"data-required" => true %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
    </div>
  </div>

   <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      
  </div>
<% end %>