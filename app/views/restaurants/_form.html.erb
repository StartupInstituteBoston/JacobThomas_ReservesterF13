<%= form_for @restaurant, :html => { :"data-validate" => 'parsley', :class => 'form-horizontal', :multipart => true } do |f| %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field', :"data-required" => true, :"data-required-message" => "Enter a name" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field', :"data-required" => true, :"data-required-message" => "Enter a description of your restaurant" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field', :"data-required" => true, :"data-required-message" => "Enter an address" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field', :"data-required" => true, :"data-type" => "phone", :"data-required-message" => "Cuz I just want your number, giiiiirl" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :photo, :class=> 'control-label' %>
    <div class="controls">
      <%= f.file_field :photo, :class => 'file_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :menu, :class=>'control-label' %>
    <div class='controls'>
      <%= f.file_field :menu, :class=>'file_field' %>
    </div>
  </div>

  <div class="control-group">
    <% for category in Category.find(:all) %>
    <div class="controls checkbox inline" >
      <%= check_box_tag "restaurant[category_ids][]", category.id, @restaurant.categories.include?(category)  %>
      <%= category.name %>
    </div>
    <% end %>
  </div>

  <div class="control-group">
    <%= f.label :category_ids, :class=> 'control-label' %>
    <div class="controls">
      <%= f.text_field :category_ids, :class=>'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurants_path, :class => 'btn' %>
  </div>
  
<% end %>
