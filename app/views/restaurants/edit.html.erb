<h1>Edit Restaurant</h1>

<%= form_for :restaurant, url: restaurant_path(@restaurant.id), 
  method: :patch do |f| %>

  <% if @restaurant.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this post from being saved: </h2>

      <ul>
        <% @restaurant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :address %>
      <%= f.text_field :address %>
    </p>

    <p>
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>

  <%= link_to "Back", restaurants_path %>