<%= form_for [ @restaurant, @reservation ], :html => { :"data-validate" => 'parsley', :class => 'form-horizontal', :multipart => true } do |f| %>

 <h1>
    Reserverate it. 
  </h1>

  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'email_field', :"data-required" => true %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :datetime, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_field :datetime, :class => 'datetime_field', :"data-required" => true, :"data-required-message" => "Enter a proper date and time" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :message, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :message, :class => 'text_area', :"data-required" => true %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= recaptcha_tags %>
    </div>
  </div>
  
  <div class="form-actions">
    <%= f.submit "Submit reserveration", :class => 'btn btn-primary' %>     
  </div>

<% end %>
