<h1>Restaurants</h1>

<table>
  <tr>
    <th>Restaurant</th>
    <th>Address</th>
    <th>Phone</th>
    <th>Description</th>
  </tr>

  <% @restaurants.each do |each| %>
    <tr>
      <td><%= each.name %></td>
      <td><%= each.address %></td>
      <td><%= each.phone %></td>
      <td><%= each.description %></td>
      <td><%= link_to "Show", each_path %></td>
      <td><%= link_to "Edit", edit_restaurant_path(restaurant) %></td>
    </tr>
  <% end %>
</table>