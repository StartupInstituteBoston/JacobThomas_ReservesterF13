<h2>Sign up</h2>

<%= form_for(resource, :html => {:"data-validate" => 'parsley'}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name  %><br />
  <%= f.text_field :name, :autofocus => true, :"data-required" => "true", :"data-minlength" => "5", :"data-minlength-message" => "Enter your real name fool!" %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email,  :"data-required" => "true", :"data-type" => "email", :"data-type-email-message" => "Enter a real email address fool!" %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :"data-required" => "true" %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :"data-required" => "true" %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
